{
    "compilerOptions": {
      "target": "ES2016",
      "outDir": "dist",
      "lib": [
        "ES2015","ES2016",
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "declaration": true,
      "declarationDir": "types",
      "emitDeclarationOnly": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ES6",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx"
    },
    "include": [
      "src"
    ],
    "exclude": [
        "node_modules",
    ]
  }